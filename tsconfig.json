{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "types": [
            "node"
        ],
        "typeRoots": [
            
        ],
        // find other workarounds below
        "strictPropertyInitialization": false,
        "strictNullChecks": false
    }
}